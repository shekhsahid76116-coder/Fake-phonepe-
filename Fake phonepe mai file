    }
    body{background:var(--bg); margin:0; display:flex; min-height:100vh; align-items:center; justify-content:center;}
    .card{background:var(--card); width:380px; padding:20px; border-radius:12px; box-shadow:0 6px 24px rgba(16,24,40,0.08);}
    h1{margin:0 0 8px; font-size:18px;}
    p.subtitle{margin:0 0 18px; color:var(--muted); font-size:13px;}
    .note{background:#fff4e5; color:#7a4b00; padding:8px 10px; border-radius:8px; font-size:13px; margin-bottom:14px;}
    .pay-row{display:flex; gap:10px; align-items:center; margin-bottom:14px;}
    .qr{width:96px; height:96px; border-radius:8px; background:linear-gradient(135deg,#eef2ff,#fdf2f8); display:flex; align-items:center; justify-content:center; color:var(--muted); font-size:12px;}
    .details{flex:1;}
