<body>
  <div class="card" role="main" aria-labelledby="title">
    <h1 id="title">Mock Payment Demo — <span style="color:#d23636">NOT PhonePe</span></h1>
    <p class="subtitle">This is a local demo page for prototype/testing only. It does not process real payments and is not affiliated with PhonePe or any provider.</p>

    <div class="note">Use this demo for UI prototype or testing. Do NOT use it to impersonate real services.</div>

    <div class="pay-row">
      <div class="qr" aria-hidden="true">
        QR<br/>PLACEHOLDER
      </div>
      <div class="details">
        <div class="amount">₹ 199.00</div>
        <div class="muted">To: Demo Merchant</div>
      </div>
    </div>

    <label for="name" class="muted">Payer name</label>
    <input id="name" placeholder="Your name" style="width:100%; padding:10px; margin:8px 0 14px; border-radius:8px; border:1px solid #e6e9ef;"/>

    <button class="pay" id="payBtn">Simulate Pay</button>

    <div class="footer">Tip: open this file locally or host on a test site (GitHub Pages). This page intentionally avoids real payment libraries.</div>
  </div>

  <div class="overlay" id="overlay" role="dialog" aria-modal="true" aria-hidden="true">
    <div class="modal" id="modal">
      <div class="success-icon">✔️</div>
      <div style="font-weight:700; font-size:16px;">Payment Successful (Demo)</div>
      <div class="small" id="modalText">Transaction ID: —</div>
      <div style="margin-top:14px;">
        <button id="closeBtn" style="padding:8px 12px; border-radius:8px; border:1px solid #e6e9ef; background:#fff; cursor:pointer;">Close</button>
      </div>
    </div>
  </div>

  <script>
    // Simple demo behavior only — no real payment actions.
    const payBtn = document.getElementById('payBtn');
    const overlay = document.getElementById('overlay');
    const modalText = document.getElementById('modalText');
    const closeBtn = document.getElementById('closeBtn');

    function generateTxId(){
      // safe fake ID for demo (not linked to any service)
      return 'DEMO-' + Math.random().toString(36).slice(2,10).toUpperCase();
    }

    payBtn.addEventListener('click', () => {
      const name = document.getElementById('name').value.trim() || 'Anonymous';
      const tx = generateTxId();
      modalText.textContent = `Payer: ${name} · Transaction ID: ${tx} · Amount: ₹199`;
      overlay.classList.add('show');
      overlay.setAttribute('aria-hidden','false');
    });

    closeBtn.addEventListener('click', () => {
      overlay.classList.remove('show');
      overlay.setAttribute('aria-hidden','true');
    });

    // allow escape to close
    document.addEventListener('keydown', (e)=>{ if(e.key==='Escape'){ overlay.classList.remove('show'); }});
  </script>
